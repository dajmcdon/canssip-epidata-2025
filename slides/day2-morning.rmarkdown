  pivot_longer(cols = c(predicted, observed), names_to = 'Deaths') %>%
  ggplot(aes(time_value, value)) +
  geom_ribbon(aes(ymin = lower, ymax = upper), alpha = .3, fill = "#00BFC4") +
  geom_line(aes(col = Deaths, alpha = ifelse(time_value > t0_date, 1, .5))) + 
